// Project Models and ENUMS

model Project {
  // default fields
  id         Int       @id @default(autoincrement())
  created_at DateTime  @default(now())
  is_active  Boolean   @default(true)
  status ProjectStatus @default(OPEN)

  title  String
  user_roles   CategoriesOnProjects[]
  updated_at DateTime?

  // relation keys
  creator_id Int

  // relations
  created_by User @relation("UserCreatedProjects", fields: [creator_id], references: [id])

  // many-to-many relations
  MoM          MoM[]
  Notification Notification[]
}

enum ProjectStatus {
  OPEN
  CLOSED
}

model CategoriesOnProjects {
  //relation keys 
  user_id     Int
  assigned_by Int
  role ProjectUserRole
  assigned_at DateTime

  // relations
  user        User     @relation(fields: [user_id], references: [id])
  project_id  Int
  project     Project  @relation(fields: [project_id], references: [id])


  @@id([project_id, user_id]) // Composite primary key
}

enum ProjectUserRole {
  SUPER_ADMIN
  CREATOR
  REVIEWER
  APPROVER
  CLIENT
  VENDOR
  PARTICIPANT
}
